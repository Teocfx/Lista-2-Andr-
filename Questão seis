package lista_2;

import java.util.Scanner;

public class Sexta {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.println("Digite o primeiro número (entre 0 e 200):");
		double num1 = sc.nextDouble();

		System.out.println("Digite o segundo número (entre 0 e 200):");
		double num2 = sc.nextDouble();

		System.out.println("Digite o terceiro número (entre 0 e 200):");
		double num3 = sc.nextDouble();

		double media1 = (num1 + num2 + num3) / 3;

		System.out.println("Digite o quarto número (entre 0 e 200):");
		double num4 = sc.nextDouble();

		System.out.println("Digite o quinto número (entre 0 e 200):");
		double num5 = sc.nextDouble();

		System.out.println("Digite o sexto número (entre 0 e 200):");
		double num6 = sc.nextDouble();

		double media2 = (num4 + num5 + num6) / 3;

		double mediaDasMedias = (media1 + media2) / 2;

		System.out.printf("A média dos três primeiros números é: %.2f%n", media1);
		System.out.printf("A média dos três segundos números é: %.2f%n", media2);
		System.out.printf("A média das médias é: %.2f%n", mediaDasMedias);

		sc.close();
	}

}
